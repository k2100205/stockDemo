<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/WEB-INF/">
    <!-- 此处用来定义不需要过滤的页面 -->
    <excludes>
        <pattern>/static/*</pattern>
        <pattern>index.jsp</pattern>
        <pattern>index</pattern>
        <pattern>/*ajax=true*</pattern>
    </excludes>

    <!-- 用来定义装饰器要过滤的页面 -->
    <decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>